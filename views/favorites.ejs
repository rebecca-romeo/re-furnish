<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Favorites</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />

    <!-- Font awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@700&family=Poppins:wght@300;600&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link
      rel="icon"
      href="https://github.com/rebecca-romeo/midterm-group-1/blob/homepage/docs/re-furnish_logo.png?raw=true"
    />

    <!-- Stylesheets  -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/nav.css" />
    <link rel="stylesheet" href="/styles/login.css" />
    <link rel="stylesheet" href="/styles/favorites.css" />
    <link rel="stylesheet" href="/styles/footer.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/nav') %>
    <header class="banner">
      <h2 class="wrapper">Favorite Items</h2>
    </header>

    <main class="wrapper">
      <ul class="item-list">
        <!--
          * loop through favorites array
          * create an li for each favourite that contains the photo, price, title, and location of the item  -->
        <% for(const favorite of favorites) { %>
        <li class="individual-item">
          <img src="<%= favorite.photo %>?raw=true" alt="" class="item-img" />

          <div class="item-info-container">
            <div class="item-info">
              <p class="fav-price">$<%= favorite.price %></p>
              <h4><%= favorite.title %></h4>
            </div>
            <div class="favorited-true">
              <form
                method="POST"
                action="/favorites/<%= favorite.item_id %>/delete"
                id="heart-delete"
              >
                <button class="heart-fav-button">
                  <i class="fa-solid fa-heart"></i>
                </button>
              </form>
            </div>
          </div>
          <div class="item-location">
            <i class="fa-solid fa-location-dot"></i>
            <p>
              <%= favorite.location_city %>, <%= favorite.location_province %>
            </p>
          </div>
        </li>
        <% } %>
      </ul>
    </main>
    <%- include('footer'); -%>
  </body>
</html>
